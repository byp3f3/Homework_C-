<Window x:Class="messenger.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:messenger"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid Background="Pink">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добро пожаловать в сетевой чат!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="nicknameTbx" Grid.Row="1" VerticalAlignment="Center"  materialDesign:HintAssist.Hint="Введите имя пользователя"/>
        <Button x:Name="newBut" Content="Я хочу создать новый чат" Grid.Row="2" VerticalAlignment="Center" Click="newBut_Click"/>
        <Button x:Name="connectBut" Content="Я хочу подключиться" Grid.Row="3" VerticalAlignment="Center" Click="connectBut_Click"/>
        <TextBox x:Name="ipTbx" Grid.Row="4" VerticalAlignment="Center" materialDesign:HintAssist.Hint="IP адрес чата"/>
    </Grid>
</Window>
