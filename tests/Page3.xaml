<Page x:Class="tests.Page3"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добавьте в таблицу вопрос и 3 варианта ответа" FontSize="24" Background="Pink" TextAlignment="Center"/>
        <DataGrid CanUserAddRows="False" Grid.Row="1" ItemsSource="{Binding Tests}" AutoGenerateColumns="True" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button Content="Добавить вопрос" Grid.Row="2" Click="Button_Click" Background="Pink"/>
    </Grid>
    

</Page>
